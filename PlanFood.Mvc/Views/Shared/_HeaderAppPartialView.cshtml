@inject UserManager<PlanFood.Mvc.Models.Db.User> userManager
<header class="page-header">
    <nav class="navbar navbar-expand-lg justify-content-between">
        <a href="/" class="navbar-brand main-logo main-logo-smaller">
            Zaplanuj <span>Jedzonko</span>
        </a>        
        <div class="dropleft"> 
            <a class="btn" data-toggle="dropdown">
                <div class="d-flex justify-content-around">
                    <h4 class="text-light mr-3">@(userManager.GetUserAsync(User).Result.Name) </h4>
                    <div class="circle-div text-centerbtn"><i class="fas fa-user icon-user"></i></div>
                </div>                    
            </a>
            <div class="dropdown-menu">
                <a asp-action="EditUser" asp-controller="Account" class="dropdown-item">Edytuj użytkownika</a>
                <a asp-action="EditUserPass" asp-controller="Account" class="dropdown-item">Edytuj hasło</a>
                <div class="dropdown-divider"></div>
                <a asp-action="Logout" asp-controller="Account" class="dropdown-item">Wyloguj</a>
            </div>
        </div>
    </nav>
</header>

